{
  "name": "üõ†Ô∏è Rei do √ìleo - Full Stack Development Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "username": "vscode",
      "upgradePackages": false
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "settings": {
        // PHP Settings
        "php.validate.executablePath": "/usr/local/bin/php",
        "php.suggest.basic": false,
        "intelephense.files.maxSize": 5000000,
        "intelephense.completion.triggerParameterHints": true,
        "intelephense.completion.insertUseDeclaration": true,

        // TypeScript/JavaScript Settings
        "typescript.updateImportsOnFileMove.enabled": "always",
        "typescript.preferences.quoteStyle": "single",
        "javascript.preferences.quoteStyle": "single",

        // Editor Settings
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.organizeImports": "explicit",
          "source.fixAll.format": "explicit"
        },
        "editor.rulers": [80, 120],
        "editor.wordWrap": "on",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,

        // File Associations
        "files.associations": {
          "*.blade.php": "blade",
          "*.env.example": "dotenv",
          "*.env.local": "dotenv",
          "*.env.production": "dotenv",
          "*.env.staging": "dotenv",
          "docker-compose*.yml": "dockercompose"
        },

        // Emmet
        "emmet.includeLanguages": {
          "blade": "html",
          "javascript": "javascriptreact",
          "typescript": "typescriptreact"
        },

        // TailwindCSS
        "tailwindCSS.includeLanguages": {
          "blade": "html",
          "javascript": "javascript",
          "typescript": "typescript"
        },
        "tailwindCSS.experimental.classRegex": [
          ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
          ["classnames\\(([^)]*)\\)", "'([^']*)'"],
          ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
        ],

        // Terminal
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.fontSize": 14,

        // Git
        "git.enableSmartCommit": true,
        "git.confirmSync": false,
        "git.autofetch": true,

        // Search
        "search.exclude": {
          "**/node_modules": true,
          "**/vendor": true,
          "**/dist": true,
          "**/build": true,
          "**/.git": true,
          "**/storage/logs": true,
          "**/storage/framework": true
        },

        // Files
        "files.exclude": {
          "**/.DS_Store": true,
          "**/Thumbs.db": true,
          "**/.vscode": false
        },

        // Language specific
        "[php]": {
          "editor.defaultFormatter": "junstyle.php-cs-fixer",
          "editor.tabSize": 4
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2
        },
        "[blade]": {
          "editor.tabSize": 4,
          "editor.autoIndent": "full"
        }
      },

      "extensions": [
        // PHP Extensions Essenciais
        "bmewburn.vscode-intelephense-client",
        "xdebug.php-debug",
        "onecentlin.laravel-blade",

        // JavaScript/React Essenciais
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "dsznajder.es7-react-js-snippets",

        // Ferramentas Essenciais
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "cweijan.vscode-mysql-client2",
        "rangav.vscode-thunder-client",

        // Formata√ß√£o
        "editorconfig.editorconfig",

        // Theme
        "pkief.material-icon-theme"
      ]
    }
  },

  "forwardPorts": [
    8000, // Laravel API
    3000, // React Vite Dev Server
    3306, // MySQL Database
    6379, // Redis Cache
    8080, // phpMyAdmin
    6380, // Redis Commander
    9000, // PHP-FPM
    5173 // Vite Alternative Port
  ],

  "portsAttributes": {
    "8000": {
      "label": "üöÄ Laravel API",
      "onAutoForward": "notify",
      "protocol": "http"
    },
    "3000": {
      "label": "‚öõÔ∏è React Frontend",
      "onAutoForward": "openBrowser",
      "protocol": "http"
    },
    "5173": {
      "label": "‚ö° Vite Dev Server",
      "onAutoForward": "openBrowser",
      "protocol": "http"
    },
    "3306": {
      "label": "üóÑÔ∏è MySQL Database",
      "onAutoForward": "ignore"
    },
    "6379": {
      "label": "üì¶ Redis Cache",
      "onAutoForward": "ignore"
    },
    "8080": {
      "label": "üíæ phpMyAdmin",
      "onAutoForward": "silent",
      "protocol": "http"
    },
    "6380": {
      "label": "üîç Redis Commander",
      "onAutoForward": "silent",
      "protocol": "http"
    }
  },

  "postCreateCommand": "bash /workspace/.devcontainer/scripts/setup.sh",
  "postStartCommand": "bash /workspace/.devcontainer/scripts/start.sh",
  "postAttachCommand": "bash /workspace/.devcontainer/scripts/welcome.sh",

  "remoteUser": "vscode",

  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/zsh-history,target=/home/vscode/.zsh_history,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/bash-history,target=/home/vscode/.bash_history,type=bind,consistency=cached",
    "source=${env:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,readonly"
  ],

  "containerEnv": {
    "DISPLAY": ":0",
    "TERM": "xterm-256color",
    "COMPOSER_CACHE_DIR": "/home/vscode/.cache/composer",
    "NPM_CONFIG_CACHE": "/home/vscode/.cache/npm"
  },

  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/home/vscode/.composer/vendor/bin:/workspace/vendor/bin",
    "GIT_SSH_COMMAND": "ssh -i /home/vscode/.ssh/id_rsa -o StrictHostKeyChecking=no"
  }
}
