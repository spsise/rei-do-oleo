{
  "name": "üõ†Ô∏è Rei do √ìleo - Full Stack Development Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "username": "vscode",
      "upgradePackages": false
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": true
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": true,
      "moby": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.fontSize": 14,
        "terminal.integrated.fontWeight": "normal",
        "terminal.integrated.scrollback": 10000,

        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.formatOnType": false,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.organizeImports": "explicit",
          "source.fixAll.format": "explicit"
        },
        "editor.rulers": [80, 120],
        "editor.wordWrap": "on",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": true,
        "editor.trimAutoWhitespace": true,
        "editor.renderWhitespace": "boundary",

        "php.validate.executablePath": "/usr/bin/php",
        "php.suggest.basic": false,
        "intelephense.files.maxSize": 5000000,
        "intelephense.completion.triggerParameterHints": true,
        "intelephense.completion.insertUseDeclaration": true,
        "intelephense.format.enable": true,
        "intelephense.phpdoc.returnVoid": false,

        "typescript.updateImportsOnFileMove.enabled": "always",
        "typescript.preferences.quoteStyle": "single",
        "typescript.preferences.includePackageJsonAutoImports": "auto",
        "typescript.suggest.autoImports": true,
        "typescript.suggest.completeFunctionCalls": true,
        "javascript.preferences.quoteStyle": "single",
        "javascript.preferences.includePackageJsonAutoImports": "auto",
        "javascript.suggest.autoImports": true,

        "files.associations": {
          "*.blade.php": "blade",
          "*.env.example": "dotenv",
          "*.env.local": "dotenv",
          "*.env.production": "dotenv",
          "*.env.staging": "dotenv",
          "*.env.testing": "dotenv",
          "docker-compose*.yml": "dockercompose",
          "*.dockerfile": "dockerfile",
          "Dockerfile*": "dockerfile"
        },

        "files.exclude": {
          "**/.DS_Store": true,
          "**/Thumbs.db": true,
          "**/.vscode": false,
          "**/node_modules": true,
          "**/vendor": true,
          "**/storage/logs": true,
          "**/storage/framework/cache": true,
          "**/storage/framework/sessions": true,
          "**/storage/framework/views": true,
          "**/public/hot": true,
          "**/public/storage": true,
          "**/.env": true,
          "**/.env.local": true
        },

        "files.watcherExclude": {
          "**/node_modules/**": true,
          "**/vendor/**": true,
          "**/storage/logs/**": true,
          "**/storage/framework/**": true,
          "**/public/hot": true,
          "**/public/storage": true,
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/bower_components/**": true,
          "**/dist/**": true,
          "**/build/**": true,
          "**/*.log": true
        },

        "search.exclude": {
          "**/node_modules": true,
          "**/vendor": true,
          "**/dist": true,
          "**/build": true,
          "**/.git": true,
          "**/storage/logs": true,
          "**/storage/framework": true,
          "**/public/hot": true,
          "**/public/storage": true,
          "**/.env": true,
          "**/.env.local": true,
          "**/*.log": true
        },

        "emmet.includeLanguages": {
          "blade": "html",
          "vue": "html",
          "javascript": "javascriptreact",
          "typescript": "typescriptreact"
        },

        "tailwindCSS.includeLanguages": {
          "blade": "html",
          "vue": "html",
          "javascript": "javascript",
          "typescript": "typescript"
        },
        "tailwindCSS.experimental.classRegex": [
          ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
          ["classnames\\(([^)]*)\\)", "'([^']*)'"],
          ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
          ["class:\\s*?[\"'`]([^\"'`]*).*?[\"'`]", "([^\"'`]*)"]
        ],

        "git.enableSmartCommit": true,
        "git.confirmSync": false,
        "git.autofetch": true,
        "git.autofetchPeriod": 180,
        "git.pruneOnFetch": true,
        "git.pullTags": true,
        "git.fetchOnPull": true,
        "git.rebaseWhenSync": true,
        "[php]": {
          "editor.defaultFormatter": "junstyle.php-cs-fixer",
          "editor.tabSize": 4,
          "editor.insertSpaces": true
        },
        "[blade]": {
          "editor.tabSize": 4,
          "editor.insertSpaces": true,
          "editor.autoIndent": "full"
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        },
        "[vue]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        },
        "[jsonc]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        },
        "[yaml]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        },
        "[css]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        },
        "[scss]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        },
        "[html]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        },
        "[markdown]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2,
          "editor.insertSpaces": true,
          "editor.wordWrap": "on",
          "editor.quickSuggestions": false
        },
        "[dockerfile]": {
          "editor.defaultFormatter": "ms-azuretools.vscode-docker",
          "editor.tabSize": 4,
          "editor.insertSpaces": true
        },
        "[dockercompose]": {
          "editor.defaultFormatter": "ms-azuretools.vscode-docker",
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        },

        "extensions.experimental.affinity": {
          "asvetliakov.vscode-neovim": 1
        },
        "typescript.preferences.includePackageJsonAutoImports": "auto",
        "typescript.suggest.autoImports": true,
        "typescript.updateImportsOnFileMove.enabled": "always",
        "workbench.settings.enableNaturalLanguageSearch": false,
        "workbench.startupEditor": "newUntitledFile",
        "workbench.editor.enablePreview": false,
        "workbench.editor.enablePreviewFromQuickOpen": false,

        "security.workspace.trust.untrustedFiles": "open",
        "security.workspace.trust.banner": "never",
        "security.workspace.trust.startupPrompt": "never",
        "security.workspace.trust.emptyWindow": false
      },

      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "xdebug.php-debug",
        "onecentlin.laravel-blade",
        "junstyle.php-cs-fixer",
        "phpstan.phpstan",

        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "dsznajder.es7-react-js-snippets",
        "formulahendry.auto-rename-tag",
        "christian-kohler.npm-intellisense",
        "christian-kohler.path-intellisense",

        "bradlc.vscode-tailwindcss",
        "zignd.html-css-class-completion",
        "pranaygp.vscode-css-peek",

        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "editorconfig.editorconfig",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",

        "cweijan.vscode-mysql-client2",
        "rangav.vscode-thunder-client",
        "ms-vscode.vscode-json",

        "ms-vscode.vscode-typescript-next",
        "ms-vscode.vscode-eslint",
        "usernamehw.errorlens",
        "gruntfuggly.todo-tree",
        "alefragnani.bookmarks",
        "ms-vscode.vscode-todo-highlight",

        "ms-vscode.vscode-js-profile-flame",
        "ms-vscode.vscode-js-profile-table",

        "yzhang.markdown-all-in-one",
        "bierner.markdown-mermaid",
        "shd101wyy.markdown-preview-enhanced",

        "pkief.material-icon-theme",
        "github.github-vscode-theme",

        "ms-python.flake8",
        "ms-python.black-formatter",

        "ms-ceintl.vscode-language-pack-pt-br"
      ]
    }
  },

  "forwardPorts": [8000, 3000, 5173, 9003],

  "portsAttributes": {
    "8000": {
      "label": "üöÄ Laravel API",
      "onAutoForward": "notify",
      "protocol": "http",
      "requireLocalPort": false
    },
    "3000": {
      "label": "‚öõÔ∏è React Frontend",
      "onAutoForward": "openBrowser",
      "protocol": "http",
      "requireLocalPort": false
    },
    "5173": {
      "label": "‚ö° Vite Dev Server",
      "onAutoForward": "openBrowser",
      "protocol": "http",
      "requireLocalPort": false
    },
    "9003": {
      "label": "üêõ Xdebug",
      "onAutoForward": "ignore",
      "protocol": "tcp",
      "requireLocalPort": false
    }
  },

  "postCreateCommand": "bash .devcontainer/scripts/setup.sh",
  "postStartCommand": "bash .devcontainer/scripts/start.sh",
  "postAttachCommand": "bash .devcontainer/scripts/welcome.sh",

  "remoteUser": "vscode",

  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/zsh-history,target=/home/vscode/.zsh_history,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/bash-history,target=/home/vscode/.bash_history,type=bind,consistency=cached"
  ],

  "containerEnv": {
    "DISPLAY": ":0",
    "TERM": "xterm-256color",
    "COMPOSER_CACHE_DIR": "/home/vscode/.cache/composer",
    "NPM_CONFIG_CACHE": "/home/vscode/.cache/npm",
    "HISTFILE": "/home/vscode/.zsh_history",
    "HISTSIZE": "10000",
    "SAVEHIST": "10000",
    "GIT_USER_NAME": "Sebasti√£o Apolinario",
    "GIT_USER_EMAIL": "spsise@gmail.com",
    "LANG": "pt_BR.UTF-8",
    "LC_ALL": "pt_BR.UTF-8",
    "TZ": "America/Sao_Paulo"
  },

  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/home/vscode/.composer/vendor/bin:/workspace/vendor/bin:/workspace/node_modules/.bin"
  },

  "initializeCommand": "bash .devcontainer/scripts/pre-build.sh",
  "onCreateCommand": "bash .devcontainer/scripts/on-create.sh",
  "updateContentCommand": "bash .devcontainer/scripts/update-content.sh",

  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  },

  "otherPortsAttributes": {
    "onAutoForward": "ignore"
  },

  "waitFor": "postCreateCommand"
}